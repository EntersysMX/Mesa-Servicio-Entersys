# ===========================================
# Configuración de Docker - GLPI Helpdesk
# ===========================================

# MySQL Configuration
MYSQL_ROOT_PASSWORD=glpi_root_2024
MYSQL_DATABASE=glpi
MYSQL_USER=glpi_user
MYSQL_PASSWORD=glpi_pass_2024

# GLPI Configuration
# Estos tokens se generan después de instalar GLPI
# 1. Accede a http://localhost:8080
# 2. Ve a Configuración → General → API
# 3. Genera el App Token
# 4. Ve a tu perfil → Configuración → Token API
GLPI_APP_TOKEN=
GLPI_USER_TOKEN=

# Frontend Configuration
VITE_GLPI_URL=http://localhost:8080
VITE_GLPI_APP_TOKEN=${GLPI_APP_TOKEN}
VITE_GLPI_USER_TOKEN=${GLPI_USER_TOKEN}

# Email Configuration (para notificaciones)
# Configura estos valores en GLPI después de la instalación
# Configuración → Notificaciones → Configuración de correo electrónico
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-correo@gmail.com
SMTP_PASSWORD=tu-app-password
SMTP_FROM=soporte@tuempresa.com

# Timezone
TZ=America/Mexico_City
